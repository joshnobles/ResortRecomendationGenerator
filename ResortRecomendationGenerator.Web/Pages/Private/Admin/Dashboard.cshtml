    <div class="modal fade" id="PotentialResortModal" data-bs-backdrop="static" data-bs-keyboard="false" tabindex="-1" aria-labelledby="PotentialResortHeading" aria-hidden="true">
        <div class="modal-dialog">
            <div class="modal-content">
                <div class="modal-header">
                    <h1 class="modal-title fs-5" id="PotentialResortHeading"></h1>
                </div>
                <div id="PotentialResortModalBody" class="modal-body container">
                    @Html.AntiForgeryToken()
                    <div class="row">
                        <div class="col">Elevation:</div>
                        <div id="PotentialResortElevation" class="col"></div>
                    </div>
                    <div class="row mt-2">
                        <div class="col">Total Runs:</div>
                        <div id="PotentialResortTotalRuns" class="col"></div>
                    </div>
                    <div class="row mt-2">
