                            <div class="col-12 form-check">
                                <input id="ChkEditResortIsIndyPass" name="isIndyPass" class="form-check-input" type="checkbox" value="" />
                                <label for="ChkEditResortIsIndyPass" class="form-check-label text-dark">Indy Pass</label>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-12 form-floating">
                                <textarea id="TxtEditResortDescription" name="description" class="form-control" placeholder=" " style="height: 100px"></textarea>
                                <label for="TxtEditResortDescription" class="form-label ms-2">Description</label>
                            </div>
                        </div>
                        <div class="row mt-2">
                            <div class="col-6 form-floating">
