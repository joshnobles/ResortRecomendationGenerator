@page
@model IndexModel
@{
    ViewData["Title"] = "RRG - Login";
}

<div id="LoginForm" class="text-center text-light">
    <div class="row">
        <h1 class="col-12">Please Login</h1>
    </div>
    <form method="post" asp-page-handler="Login">
        <div class="row">
            <div class="col-4"></div>
            <div class="form-floating col-4">
                <input class="form-control" asp-for="ViewModel.Email" placeholder=" " />
                <label for="ViewModel_Email" class="form-label text-dark ms-2">Email</label>
                <span class="text-danger" asp-validation-for="ViewModel.Email"></span>
            </div>
            <div class="col-4"></div>
        </div>
        <div class="row mt-2">
            <div class="col-4"></div>
            <div class="form-floating col-4">
                <input class="form-control" asp-for="ViewModel.Password" placeholder=" " type="password" />
                <label for="ViewModel_Password" class="form-label text-dark ms-2">Password</label>
                <span class="text-danger" asp-validation-for="ViewModel.Password"></span>
            </div>
            <div class="col-4"></div>
        </div>
        <div class="row mt-3">
            <div class="col-4"></div>
            <button type="submit" class="col-4 btn btn-success">Login</button>
            <div class="col-4"></div>
        </div>
        <div class="row mt-1">
            <div class="col-4"></div>
            <span class="col-4">Don't have an account? <a class="link-primary" href="/Register">Register</a></span>
            <div class="col-4"></div>
        </div>
    </form>
</div>